<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookman">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_bookman_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_circular__logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookMan">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.CategoriesActivity" />
        <activity android:name=".activities.uploader.UploaderSignin" />
        <activity android:name=".activities.uploader.UploaderHome" />
        <activity android:name=".activities.uploader.UploaderRegister" />
        <activity android:name=".activities.uploader.UploadBook" />
        <activity android:name=".activities.GenreActivity" />
        <activity android:name=".activities.DownloadBook" />
        <activity android:name=".activities.SearchActivity" />
        <activity android:name=".activities.uploader.ManageBooks" />
        <activity android:name=".activities.uploader.ViewBook" />
    </application>

</manifest>