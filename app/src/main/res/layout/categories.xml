<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="45dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_categories" />
    <ImageView
        android:id="@+id/index_iv"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toStartOf="@+id/romance_iv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/ic_index"
        android:onClick="genre"/>

    <ImageView
        android:id="@+id/romance_iv"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/index_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_romance"
        android:onClick="genre"/>

    <ImageView
        android:id="@+id/adventure_iv"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toStartOf="@+id/crime_iv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/index_iv"
        app:layout_constraintTop_toBottomOf="@+id/index_iv"
        app:srcCompat="@drawable/ic_adventure"
        android:onClick="genre"/>

    <ImageView
        android:id="@+id/crime_iv"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/adventure_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/romance_iv"
        app:layout_constraintTop_toBottomOf="@+id/romance_iv"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_crime"
        android:onClick="genre"/>

    <ImageView
        android:id="@+id/comedy_iv"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toStartOf="@+id/fantasy_iv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/adventure_iv"
        app:layout_constraintTop_toBottomOf="@+id/adventure_iv"
        app:srcCompat="@drawable/ic_comedy"
        android:onClick="genre"/>

    <ImageView
        android:id="@+id/fantasy_iv"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/comedy_iv"
        app:layout_constraintEnd_toEndOf="@+id/crime_iv"
        app:layout_constraintTop_toBottomOf="@+id/crime_iv"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_fantasy"
        android:onClick="genre"/>

    <ImageView
        android:id="@+id/scifi_iv"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toStartOf="@+id/bio_iv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/comedy_iv"
        app:layout_constraintTop_toBottomOf="@+id/comedy_iv"
        app:srcCompat="@drawable/ic_scifi"
        android:onClick="genre"/>

    <ImageView
        android:id="@+id/bio_iv"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/scifi_iv"
        app:layout_constraintEnd_toEndOf="@+id/fantasy_iv"
        app:layout_constraintTop_toBottomOf="@+id/fantasy_iv"
        app:srcCompat="@drawable/ic_biography"
        android:onClick="genre"/>
</androidx.constraintlayout.widget.ConstraintLayout>